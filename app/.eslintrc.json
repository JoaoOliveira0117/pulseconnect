{
  "parser":"@typescript-eslint/parser",
  "plugins":[
    "@typescript-eslint"
  ],
  "extends":[
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions":{
    "ecmaVersion":"latest",
    "sourceType":"module"
  },
  "root": true,
  "rules":{
    "prettier/prettier":0,
    "no-mixed-spaces-and-tabs":0,
    "quotes":[
      "error",
      "single"
    ],
    "semi":[
      "error",
      "never"
    ],
    "indent":[
      "error",
      2,
      {
        "MemberExpression":1
      }
    ],
    "no-multi-spaces":[
      "error"
    ],
    "newline-per-chained-call":[
      "error",
      {
        "ignoreChainWithDepth":2
      }
    ]
  }
}